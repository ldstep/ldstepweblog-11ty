---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this templateâ€“it extends the base template #}

<div class="wrapper home">
   <div class="content">
      {{ content | safe }}
   </div>
</div>
{# Add the recent posts section #}
<section class="recent-posts">
   <h2>Recent Posts</h2>
   <ul class="post-list">
      {% set count = 0 %} {% for post in collections.posts %} {% if count < 8 %}
      <li class="post-item">
         <h3>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
         </h3>
         <time datetime="{{ post.date | htmlDateString }}">{{
            post.date.toLocaleDateString("en-US", {
               year: "numeric",
               month: "long",
               day: "numeric"
            })
         }}</time>
         {% if post.data.description %}
         <p>{{ post.data.description }}</p>
         {% endif %}
      </li>
      {% set count = count + 1 %} {% endif %} {% endfor %}
   </ul>
   <a href="/posts/" class="all-posts-link">View all posts</a>
</section>
